<div class="Employee-hero">
    <div class="title">
        <h1 id="empHeading">Schedule</h1>
    </div>

    <button class="employeeBtn" id="addSchedule">Add</button>

    <section class="addScheduleModal">
        <div class="modalContent">
            <h1 class="modalTitle">Add Schedule</h1>
            <button id="closeSign" class="closeBtn">&times;</button>
        </div>

        
        <form class="form" action="#">

            <section>
                
                <label for="week">Select a start date:</label>
                <input type="date" id="week" name="week" value="date">

                <div class=siteDropdown>
                    <label for="site">Select a job site</label>
                    <select id="site">
                        {{#each site as | data |}}
                        {{>scheduleDropdown}}
                        {{/each}}
                    </select>
                </div>

                <div class=EmployeeCheckBox>
                    <h3>Select an employee<h3><br>
                    <div class="checkbox">
                        {{#each employee as | data |}}
                        {{>scheduleCheckbox}}
                        {{/each}}
                    </div>
                        
                </div>
                <input class="submitBtn" type="submit" value="Submit" />
            </section>


        </form>
    </section>

    <div class="employee-content">
            {{#each schedule as | data | }}
            {{>schedule-data}}
            {{/each}}
    </div>
</div>

<script src="./js/scheduleScript.js"></script>
</body>